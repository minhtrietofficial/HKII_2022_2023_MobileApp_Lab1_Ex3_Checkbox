<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f1f3f2">



    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android Checkboxes"
        android:textAlignment="center"
        android:textColor="#22695b"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="120dp" />

    <CheckBox
        android:id="@+id/cb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Android"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="158dp"
        android:layout_marginLeft="10dp"/>

    <CheckBox
        android:id="@+id/cb2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="iOS"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/cb1"
        tools:layout_editor_absoluteX="53dp"
        android:layout_marginLeft="10dp"/>

    <CheckBox
        android:id="@+id/cb3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Windows"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/cb2"
        tools:layout_editor_absoluteX="77dp"
        android:layout_marginLeft="10dp"/>

    <CheckBox
        android:id="@+id/cb4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RIM"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/cb3"
        tools:layout_editor_absoluteX="95dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/btCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:text="Click here to see Results"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb4"
        tools:ignore="MissingConstraints"

        />



    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#22695b"
        android:textSize="18sp"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@+id/btCheck"
        tools:layout_editor_absoluteX="78dp" />
</androidx.constraintlayout.widget.ConstraintLayout>